version: 1.1
nodes:
  now = timer(1000)
  nowText = await(`Now is ${format(now, 'd-MMM-Y, h:mm:ssaa')}`, () => '...')
  $1 = router.path
layout:
[,,,,
  [,,,
    {
      "node": "now"
    }
  ],,
  [,,,
    {
      "node": "nowText"
    }
  ],,
  [,,,
    {
      "node": "$1"
    },,
    {
      "value": "[foo](/foo)"
    }
  ],
  [,,,,,
    {
      "value": "[bar](/bar)"
    }
  ]
]
